[user]
  name = Alezco
  email = benjaminmorali4@hotmail.fr
[alias]
  co = checkout
  br = branch
  c = commit -m
  l = log
  s = status
  a = add
  ls = ls-files
  lf = log --graph --oneline --all --decorate=full
  pom = push origin master
  pr = pull --rebase
  A = add -A
  cl = clone
  fdp = blame
  can = commit --amend --no-edit
  pf = push --force-with-lease
  prom = pull --rebase origin main
  cob = checkout -b
  bd = branch -D
  sa = stash --all
[branch]
  autosetuprebase = always
	sort = -committerdate
[push]
  default = current
[core]
  autocrlf = input
	longpaths = true
[maintenance]
	repo = /home/benjamin/litij-front
	repo = /home/benjamin/litij-back
[rerere]
	enabled = true
[column]
	ui = auto
